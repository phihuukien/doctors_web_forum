
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title> Sign In | Health Talk</title>
    <link rel="shortcut icon" href="..\assets\svg\logos\logo.png">
    <link href="~/assets/css/login.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
</head>
<body>
    <h2>Health Talk: Sign in/up Form</h2>
    <div class="container" id="container">
        <div class="form-container sign-up-container">
            <form action="#">
                <h1>Create Account</h1>
                <hr>
                <input type="text" placeholder="Name" />
                <input type="email" placeholder="Email" />
                <input type="password" placeholder="Password" id="password" />
                <lable style="width: 100%; text-align: start; font-size: 13px; margin-left: 18px;">Access Rights</lable>
                <div style="width:100%">
                    <div style="display: flex; align-items: center; width: 50%;">
                        <input  type="radio" id="access_right_1" name="access_right" value="true" /> <span>Private</span>
                        <input type="radio" id="access_right_2" name="access_right" value="false" /><span>Public</span>  
                    </div>
                </div>
                <hr />
                <button>Sign Up</button>
            </form>
        </div>
        <div class="form-container sign-in-container">
            <form action="/login/authentication" method="post">
                <h1>Sign in</h1>
                <hr>
                <small style="color:red;">@TempData["error"]</small>

                <input type="hidden" value="@ViewBag.urlRedirect" name="urlRedirect" />
                <input type="email" name="Email" placeholder="Email" value="@TempData["email"]" />
                <input type="password" name="Password" id="passwordLogIn" placeholder="Password" value="@TempData["password"]" />
                <span class="fa fa-fw fa-eye field-icon toggle-password"></span>
                <hr />
                <a href="#">Forgot your password?</a>
                <button type="submit" >Sign In</button>
            </form>
        </div>
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <h1>Welcome Back!</h1>
                    <p>To keep connected with us please login with your personal info</p>
                    <button class="ghost" id="signIn">Sign In</button>
                    <a href="/"><button class="ghost" style="margin-top:10px;" id="">Go Home</button></a>
                </div>
                <div class="overlay-panel overlay-right">
                    <h1>Hello, Friend!</h1>
                    <p>Enter your personal details and start journey with us</p>
                    <button class="ghost" id="signUp">Sign Up</button>
                    <a href="/"><button class="ghost" style="margin-top:10px;" id="">Go Home</button></a>
                </div>
            </div>
        </div>
    </div>
    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <script src="~/assets/js/login.js"></script>
    <script>
        $(".toggle-password").click(function () {
            $(this).toggleClass("fa-eye fa-eye-slash");
            var x = document.getElementById("passwordLogIn");
            if (x.type === "password") {
                x.type = "text";
            } else {
                x.type = "password";
            }
        });
    </script>
   
</body>

</html>
